		<script>
			$('.tab-box .arrow').on('click',function () {
				var $this = $(this),width = 560,index = $('.tab-con.active').index(),$tabitem = $('.tab-item');
				if($this.hasClass('arrow-right')){
					$tabitem.animate({
						marginLeft: -(index + 1) * width},
						500, function() {
						if(index < 1){
							$('.tab-con').eq(index + 1).addClass('active').siblings('.active').removeClass('active');
						}
					});
				}else {
					if(index > -1){
					$tabitem.animate({
						marginLeft: -(index) * width},
						500, function() {
							if(index == 0){
								return false;
							}
							$('.tab-con').eq(index-1).addClass('active').siblings('.active').removeClass('active');
					});
				}
				}

			})
			$('.tab-btn.active').on('click',function () {
