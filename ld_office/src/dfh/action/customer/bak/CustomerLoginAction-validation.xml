<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
 "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
	<field name="loginname">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>请输入登陆账户</message>
		</field-validator>
		<field-validator type="regex" short-circuit="true">
			<param name="expression">^[a-z]([a-z]|[0-9])*$</param>
			<message>帐号由小写字母和数字组成</message>
		</field-validator>
	</field>
	<field name="password">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>请输入登陆密码</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">6</param>
			<param name="maxLength">20</param>
			<message>密码6-20位</message>
		</field-validator>
	</field>
	<field name="validateCode">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>请输入验证码</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">3</param>
			<message>验证码至少3位</message>
		</field-validator>
	</field>
</validators>