<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nnti.common.dao.master.IMasterSelfRecordDao">
	    
    <insert id="create" parameterType="SelfRecord">
    	insert
    	into
    	self_record
    	(
			<trim suffixOverrides=",">
       			<if test="pno != null">pno,</if>
            	<if test="loginName != null">loginname,</if>
            	<if test="platform != null">platform,</if>
            	<if test="selfName != null">selfname,</if>
            	<if test="type != null">type,</if>
            	<if test="createTime != null">createtime,</if>
            	<if test="updateTime != null">updatetime,</if>
            	<if test="remark != null">remark,</if>
        	</trim>
		)
		VALUES
		(
			<trim suffixOverrides=",">
				<if test="pno != null">#{pno},</if>
            	<if test="loginName != null">#{loginName},</if>
            	<if test="platform != null">#{platform},</if>
            	<if test="selfName != null">#{selfName},</if>
            	<if test="type != null">#{type},</if>
            	<if test="createTime != null">#{createTime},</if>
            	<if test="updateTime != null">#{updateTime},</if>
            	<if test="remark != null">#{remark},</if>
        	</trim>
        )
    </insert>
    
    <update id="updateList" parameterType="java.util.Map">
    	update
    	self_record
		set
		type = #{type},
		updatetime = #{updateTime}
		<where>
			<if test="loginName != null">loginname = #{loginName}</if>
			<if test="platform != null">and platform = #{platform}</if>
			<if test="conditionType != null">and type = #{conditionType}</if>
		</where>
    </update>
    
	<update id="update" parameterType="SelfRecord">
		update
		self_record
		<set>
			<if test="type != null">type = #{type},</if>
			<if test="remark != null">remark = #{remark},</if>
			<if test="updateTime != null">updatetime = #{updateTime},</if>
		</set>
		<where>
			pno = #{pno}
		</where>
	</update>
</mapper>