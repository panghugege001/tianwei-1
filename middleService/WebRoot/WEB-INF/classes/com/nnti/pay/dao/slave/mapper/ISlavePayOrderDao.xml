<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nnti.pay.dao.slave.ISlavePayOrderDao">
	
	<select id="sumMoney" parameterType="PayOrder" resultType="java.lang.Double">
		SELECT 
		sum(money) 
		FROM 
		payorder
		<where>
			<if test="loginName != null">loginName = #{loginName}</if>
            <if test="type != null">AND type = #{type}</if>
            <if test="flag != null">AND flag = #{flag}</if>
			<if test="createTime != null">AND createTime >= #{createTime}</if>
		</where>
	</select>
    
    <select id="findByCondition" parameterType="PayOrder" resultType="PayOrder">
    
    </select>
	    
    <select id="get" parameterType="java.lang.String" resultType="PayOrder">
		SELECT 
		* 
		FROM 
		payorder
        <where>
			billNo = #{billNo}
		</where>
	</select>
	
    <select id="findByPage" parameterType="PayOrder" resultType="PayOrder">
		SELECT 
		* 
		FROM 
		payorder
		<where>
			<if test="billNo !=null and billNo != ''">billNo = #{billNo}</if>
            <if test="payPlatform !=null and payPlatform != ''">AND payPlatform = #{payPlatform}</if>
			<if test="type !=null and type != ''">AND type = #{type}</if>
		</where>
	</select>
</mapper>